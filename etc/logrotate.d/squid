#
#	Logrotate fragment for squid.
#
/var/log/squid/*.log {
	weekly
	compress
	rotate 4
	missingok
	nocreate
	sharedscripts
	prerotate
		test ! -x /usr/sbin/sarg-reports || /usr/sbin/sarg-reports
	endscript
	postrotate
		test ! -e /var/run/squid.pid || test ! -x /usr/sbin/squid || /usr/sbin/squid -k rotate
	endscript
}
